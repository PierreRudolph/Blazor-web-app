@page "/contacts"
@* @using Blazor_App.Models eine möglichkeit
das model zu importieren. Besser aber wenn bei _imports.razor
denn dann überall verfügbar. *@

@using Blazor_App.Components.Pages.ContactComponents

@rendermode InteractiveServer

<h1 class="headline-contacts">Kontakte</h1>

<input type="checkbox" @bind="DisplayEmail"> <label>Display Email</label>

@foreach (var contact in contacts)
{

    <ContactComponent DisplayEmail="DisplayEmail" CurrentContact="contact">
    </ContactComponent>

    @* <Blazor_App.Components.Pages.ContactComponents.ContactComponent FirstName="@contact.FirstName"
LastName="@contact.LastName" Email="@contact.Email">

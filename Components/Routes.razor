    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
   
    <NotFound >
        

        <LayoutView Layout="typeof(Layout.MainLayout)">
            <Blazor_App.Components.Pages.NotFound></Blazor_App.Components.Pages.NotFound>
        </LayoutView>@*to show the sidebar and header,to not have a empty page with just the information from the NotFound component*@
    </NotFound>
    
</Router>
